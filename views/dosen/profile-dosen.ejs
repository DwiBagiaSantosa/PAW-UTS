<%- include('../parts-dosen/header') %>
    <div class="container">
        <%- include('../parts-dosen/sidebar') %>

        <div class="content">
            <div class="judul">
                <% dtd.forEach(function(data) { %>
                <h1>Profile/<%=data.nama%></h1>
                <% }); %>
            </div>
            <div class="profile-mahasiswa">
                <div class="foto-profile">
                    <img src="/img/profile.png" alt="profile">
                </div>
                <div class="data">
                    <% dtd.forEach(function(data) { %>
                    <form action="/submit" method="post">
                        <div class="nama">
                            <label for="">Nama</label>
                            <input type="text" name="nama" id="nama" value="<%=data.nama %>" readonly>
                        </div>
                        <div class="nim">
                            <label for="" >NIP</label>
                            <input type="text" name="nip" id="nip" value="<%=data.nip %>" readonly>
                        </div>
                        <div class="jenis-kelamin">
                            <label for="">Jenis Kelamin</label>
                            <input type="text" name="jenis_kelamin" id="jenis_kelamin" value="<%=data.jenis_kelamin %>" readonly>
                        </div>
                        <div class="alamat">
                            <label for="">Alamat</label>
                            <input type="text" name="alamat" value="<%=data.alamat %>" readonly>
                        </div>
                        <div class="kota">
                            <label for="">Kota</label>
                            <input type="text" name="kota" value="<%=data.kota %>" readonly>
                        </div>
                        <div class="email">
                            <label for="">Email</label>
                            <input type="text" name="email" value="<%=data.email %>" readonly>
                        </div>
                        <div class="button">
                            <a href="/dosen/profile-dosen/edit/<%data.dosen_id%>">Edit</a>
                        </div>
                    </form>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>