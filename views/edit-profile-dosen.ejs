<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="https://fonts.googleapis.com/css2?family=Sarabun:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">

</head>
<body>
    <div class="header">
        <li><a href="#">E-Learning</a></li>
        <div class="navbar-profile">
            <a href="/">Logout</a>
        </div>
    </div>
    <div class="container">
        <div class="sidebar">
            <div class="status">
                <div class="status-img">
                    <img src="/img/profile.png" alt="profile">
                </div>
                <div class="status-content">
                    <p>Nama</p>
                    <p>Role</p>
                    <p>Status (Online/Offline)</p>
                </div>
            </div>
            <div class="dashboard">
                <a href="/dashboard-dosen">Dashboard</a>
            </div>
            <div class="materi">
                <a href="#">Materi</a>
            </div>
            <div class="tugas">
                <a href="/jadwal-dosen">Jadwal Ngajar</a>
            </div>
            <div class="profile" style="background: #c2cac4;">
                <a href="/profile-dosen">Profile</a>
            </div>
        </div>
        <div class="content">
            <div class="judul">
                <h1>Profile/Dosen</h1>
            </div>
            <div class="profile-mahasiswa">
                <div class="foto-profile">
                    <img src="/img/profile.png" alt="profile">
                </div>
                <div class="data">
                    <% dtd.forEach(function(data) { %>
                    <form action="/profile-dosen/<%=data.dosen_id%>" method="post">
                        <div class="nama">
                            <label for="">Nama</label>
                            <input type="text" name="nama" id="nama" value="<%=data.nama %>">
                        </div>
                        <div class="nim">
                            <label for="" >NIP</label>
                            <input type="text" name="nip" id="nip" value="<%=data.nip %>">
                        </div>
                        <div class="jenis-kelamin">
                            <label for="">Jenis Kelamin</label>
                            <input type="text" name="jenis_kelamin" id="jenis_kelamin" value="<%=data.jenis_kelamin %>">
                        </div>
                        <div class="alamat">
                            <label for="">Alamat</label>
                            <input type="text" name="alamat" value="<%=data.alamat %>">
                        </div>
                        <div class="kota">
                            <label for="">Kota</label>
                            <input type="text" name="kota" value="<%=data.kota %>" >
                        </div>
                        <div class="email">
                            <label for="">Email</label>
                            <input type="text" name="email" value="<%=data.email %>">
                        </div>
                        <div >
                            <button>Save</button>
                        </div>
                    </form>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>